{
  "name": "swallowtail",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:push": "bun --cwd packages/db drizzle-kit push",
    "db:studio": "bun --cwd packages/db drizzle-kit studio",
    "dev": "bun --filter '*' dev",
    "dev:api": "bun --cwd apps/api dev",
    "dev:web": "bun --cwd apps/web dev",
    "cli": "bun --cwd apps/cli index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1"
  }
}